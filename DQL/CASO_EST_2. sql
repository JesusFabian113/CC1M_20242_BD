SELECT V.CODIGO_VOO, V.HORARIO_PARTIDA,V.HORARIO_CHEGADA, A1.NOME_AEROPORTO AS ORIGEM, A2.NOME_AEROPORTO AS DESTINO
FROM VOOS V
JOIN AEROPORTOS A1 ON V.ORIGEM = A1.ID_AEROPORTO
JOIN AEROPORTOS A2 ON V.DESTINO = A2.ID_AEROPORTO 
WHERE A1.NOME_AEROPORTO = 'AEROPORTO INTERNACIONAL DE SÃO PAULO';

SELECT P.NOME, P.CPF, P.TELEFONE, R.DATA_RESERVA, R.STATUS
FROM RESERVAS R 
JOIN PASSAGEIROS P ON R.ID_PASSAGEIRO = P.ID_PASSAGEIRO
WHERE R.ID_VOO = 1001;

SELECT V.CODIGO_VOO, V.HORARIO_PARTIDA, V.HORARIO_CHEGADA, A1.NOME_AEROPORTO AS ORIGEM, A2.NOME_AEROPORTO AS DESTINO 
FROM RESERVAS R
JOIN VOOS V ON R.ID_VOO = V.ID_VOO 
JOIN AEROPORTOS A1 ON V.ORIGEM = A1.ID_AEROPORTO 
JOIN AEROPORTOS A2 ON V.DESTINO = A2.ID_AEROPORTO 
WHERE R.ID_PASSAGEIRO = 2; 

SELECT V.CODIGO_VOO, V.HORARIO_PARTIDA, V.HORARIO_CHEGADA, a1.nome_aeroporto AS origem, a2.nome_aeroporto AS destino
FROM voos v
JOIN aeroportos a1 ON v.origem = a1.id_aeroporto
JOIN aeroportos a2 ON v.destino = a2.id_aeroporto
WHERE v.id_aeronave = 5;

SELECT f.nome, f.cargo, o.data_operacao
FROM operacoes_voo o
JOIN funcionarios f ON o.id_funcionario = f.id_funcionario
WHERE o.id_voo = 1001;

SELECT v.codigo_voo, v.horario_partida, v.horario_chegada, a2.nome_aeroporto AS destino
FROM voos v
JOIN aeroportos a2 ON v.destino = a2.id_aeroporto
WHERE v.origem = (SELECT id_aeroporto FROM aeroportos WHERE nome_aeroporto = 'Aeroporto de Congonhas');

SELECT v.codigo_voo, v.horario_partida, v.horario_chegada, r.status
FROM reservas r
JOIN voos v ON r.id_voo = v.id_voo
WHERE r.id_passageiro = 10; 

SELECT v.codigo_voo, v.horario_partida, v.horario_chegada, a1.nome_aeroporto AS origem, a2.nome_aeroporto AS destino
FROM voos v
JOIN aeroportos a1 ON v.origem = a1.id_aeroporto
JOIN aeroportos a2 ON v.destino = a2.id_aeroporto
WHERE a1.nome_aeroporto = 'Aeroporto Internacional de São Paulo'
AND v.horario_partida BETWEEN '2024-11-01 00:00:00' AND '2024-11-30 23:59:59';

SELECT f.nome, f.cargo
FROM operacoes_voo o
JOIN funcionarios f ON o.id_funcionario = f.id_funcionario
WHERE o.id_voo = 1001;

SELECT p.nome, p.cpf, v.codigo_voo, v.horario_partida, v.horario_chegada
FROM reservas r
JOIN passageiros p ON r.id_passageiro = p.id_passageiro
JOIN voos v ON r.id_voo = v.id_voo
WHERE r.status = 'Confirmada'
AND DATE(v.horario_partida) = '2024-12-15'; 
