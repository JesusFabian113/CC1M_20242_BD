SELECT c.NOME AS CLIENTE, c.CPF, p.NOME AS PRODUTO
FROM CLIENTES c
JOIN VENDAS v ON c.CPF = v.CPF_CLIENTE
JOIN VENDAS_PRODUTOS vp ON v.COD_VENDA = vp.COD_VENDA
JOIN PRODUTOS p ON vp.COD_PRODUTO = p.CODIGO
WHERE p.NOME = 'COMPUTADOR XYZ'; 

SELECT p.NOME AS PRODUTO, p.ESTOQUE, f.NOME AS FORNECEDOR, f.CNPJ
FROM PRODUTOS p
JOIN FORNECEDORES f ON p.CNPJ_FORNECEDOR = f.CNPJ
WHERE p.NOME = 'COMPUTADOR XYZ';

SELECT v.COD_VENDA, v.DATA_VENDA, v.VALOR_TOTAL, p.STATUS AS STATUS_PAGAMENTO, c.NOME AS CLIENTE
FROM VENDAS v
JOIN PAGAMENTOS p ON v.COD_VENDA = p.COD_VENDA
JOIN CLIENTES c ON v.CPF_CLIENTE = c.CPF
ORDER BY v.DATA_VENDA DESC;

SELECT p.NOME AS PRODUTO, p.ESTOQUE, f.NOME AS FORNECEDOR
FROM PRODUTOS p
JOIN FORNECEDORES f ON p.CNPJ_FORNECEDOR = f.CNPJ
WHERE p.ESTOQUE > 0
ORDER BY p.NOME;

SELECT p.DATA_PAGAMENTO, p.VALOR, p.STATUS, v.COD_VENDA
FROM PAGAMENTOS p
JOIN VENDAS v ON p.COD_VENDA = v.COD_VENDA
WHERE v.CPF_CLIENTE = 'CPF_DO_CLIENTE' 
ORDER BY p.DATA_PAGAMENTO DESC;

SELECT v.COD_VENDA, v.DATA_VENDA, c.NOME AS CLIENTE, v.VALOR_TOTAL
FROM VENDAS v
JOIN CLIENTES c ON v.CPF_CLIENTE = c.CPF
WHERE v.DATA_VENDA BETWEEN '2024-01-01' AND '2024-12-31'  
ORDER BY v.DATA_VENDA DESC;

SELECT p.NOME AS PRODUTO, p.PRECO, p.ESTOQUE
FROM PRODUTOS p
ORDER BY p.NOME;

SELECT p.NOME AS PRODUTO, SUM(p.ESTOQUE) AS ESTOQUE_TOTAL, f.NOME AS FORNECEDOR
FROM PRODUTOS p
JOIN FORNECEDORES f ON p.CNPJ_FORNECEDOR = f.CNPJ
WHERE p.NOME = 'CELULAR ABC'  -- Substitua pelo nome do produto
GROUP BY p.NOME, f.NOME;

SELECT p.NOME AS PRODUTO, p.PRECO, p.ESTOQUE
FROM PRODUTOS p
JOIN FORNECEDORES f ON p.CNPJ_FORNECEDOR = f.CNPJ
WHERE f.NOME = 'FORNECEDOR XYZ'  
ORDER BY p.NOME;

SELECT c.NOME AS CLIENTE, c.CPF, c.STATUS_FIDELIDADE
FROM CLIENTES c
WHERE c.STATUS_FIDELIDADE = 'ATIVO';
